# License Intelligence System - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Required Configuration
# =============================================================================

# OpenAI API key for embeddings and answer generation
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# =============================================================================
# API Configuration (for REST API deployment)
# =============================================================================

# API key for authenticating requests to /query and /sources endpoints
# Generate a secure random string (e.g., openssl rand -hex 32)
RAG_API_KEY=your-secure-api-key-here

# Slack signing secret for verifying /slack/command requests
# Get from: https://api.slack.com/apps → Your App → Basic Information
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Rate limit: maximum requests per minute per API key (default: 100)
RAG_RATE_LIMIT=100

# CORS allowed origins (comma-separated, empty for none)
# Example: https://example.com,https://app.example.com
RAG_CORS_ORIGINS=

# =============================================================================
# Optional Configuration
# =============================================================================

# ChromaDB directory (default: index/chroma)
# CHROMA_DIR=index/chroma

# Enable debug logging (default: true)
# DEBUG_LOG_ENABLED=true

# Trust proxy headers like X-Forwarded-For (default: false)
# Set to "true" only when behind a trusted reverse proxy (ALB, nginx)
# RAG_TRUST_PROXY_HEADERS=false
